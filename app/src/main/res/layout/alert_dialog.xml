<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@drawable/design_alert">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_alert_head"
        android:text="Logout"
        android:textColor="#f71313"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#cec5c5"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_alert_two"
        android:text="Do you want to Quit the App ??"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="30dp"
        android:weightSum="4">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_yes"
        android:text="Exit"
        android:textSize="18dp"
        android:textColor="#0a24cc"
        android:layout_weight="2"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_no"
        android:text="Cancel"
        android:textSize="18dp"
        android:textColor="#f71313"
        android:layout_weight="2"
        android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>