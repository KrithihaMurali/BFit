<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearlayout_editprofile"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="#0b2092"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_edit_first"
            android:hint="First Name"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textColorHint="#0b2092"
            android:textStyle="italic"
            android:textColor="#0b2092"
            android:backgroundTint="#0b2092"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_edit_sur"
            android:hint="Sur Name"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textColorHint="#0b2092"
            android:textColor="#0b2092"
            android:textStyle="italic"
            android:backgroundTint="#0b2092"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_edit_address"
            android:hint="Address"
            android:textColor="#0b2092"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textColorHint="#0b2092"
            android:textStyle="italic"
            android:backgroundTint="#0b2092"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_edit_phone"
            android:hint="Phone Number"
            android:textColor="#0b2092"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:inputType="number"
            android:textColorHint="#0b2092"
            android:textStyle="italic"
            android:backgroundTint="#0b2092"
            />
        <com.andexert.library.RippleView
            android:id="@+id/rippleview_edit"
            rv_centered="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_toLeftOf="@+id/more2">

            <Button
                android:id="@+id/btn_edit_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:background="@drawable/button_design"
                android:layout_marginTop="25dp"/>
        </com.andexert.library.RippleView>
    </LinearLayout>


</LinearLayout>