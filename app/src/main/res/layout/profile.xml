<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearlayout_profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="30dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="30dp"
        android:textColor="#0b2092"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_profile_first"
            android:hint="First Name"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textColorHint="#0b2092"
            android:textStyle="italic"
            android:backgroundTint="#0b2092"
            android:textColor="#0b2092"
            android:editable="false"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_profile_sur"
            android:hint="Sur Name"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textColorHint="#0b2092"
            android:textStyle="italic"
            android:backgroundTint="#0b2092"
            android:editable="false"
            android:textColor="#0b2092"


            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_profile_address"
            android:hint="Address"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textColorHint="#0b2092"
            android:textStyle="italic"
            android:backgroundTint="#0b2092"
            android:textColor="#0b2092"
            android:editable="false"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_profile_phone"
            android:hint="Phone Number"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textColorHint="#0b2092"
            android:textStyle="italic"
            android:backgroundTint="#0b2092"
            android:inputType="number"
            android:textColor="#0b2092"
            android:editable="false"
            />
    </LinearLayout>

</LinearLayout>