<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/part2G"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <RelativeLayout
            android:id="@+id/graphrrG"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="3">

            <RelativeLayout
                android:id="@+id/rrG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/frameG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/accxyzG"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/accvalG"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:text="Accelerometer\nvalues"
                android:textColor="#000000"
                android:textSize="18dip"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/accvalG"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:id="@+id/linearLayout">

                <TextView
                    android:id="@+id/accxG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" X "
                    android:textColor="#000000"
                    android:textSize="30dip"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/accyG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Y "
                    android:textColor="#000000"
                    android:textSize="30dip"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/acczG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Z "
                    android:textColor="#000000"
                    android:textSize="30dip"
                    android:textStyle="italic" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/accval"
                android:layout_alignRight="@+id/accval"
                android:layout_alignEnd="@+id/accval"
                android:layout_alignBottom="@+id/linearLayout">

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>