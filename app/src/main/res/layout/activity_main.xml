<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to BFit..."
            android:textSize="35dp"
            android:layout_marginTop="15dp"
            android:textStyle="italic"
            android:textColor="#0b2092"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/title"
        android:layout_weight="0.84"
        android:layout_above="@+id/linear_main">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#0b2092"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/linear_run"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run Or Walk"
                android:layout_marginTop="25dp"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_g_run"
                android:text="Guideline"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:layout_weight="1.8"
                android:gravity="right"
                />
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#0b2092"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/linear_sit"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sit Up"
                android:layout_marginTop="25dp"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_g_sit"
                android:text="Guideline"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:layout_weight="1.8"
                android:gravity="right"
                />
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#0b2092"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"

            android:id="@+id/linear_push"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Push Up"
                android:layout_marginTop="25dp"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_g_push"
                android:text="Guideline"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:layout_weight="1.8"
                android:gravity="right"
                />

        </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/linear_main">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#01ffffff"/>
        <!--<RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:id="@+id/img_up"
                android:background="@drawable/downup"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="410dp"
                />
        </RelativeLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4.5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:weightSum="4"
                android:id="@+id/linear_map"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_weight="1.2">
                <ImageButton
                    android:id="@+id/img_map"
                    android:layout_width="36dp"
                    android:layout_height="32dp"
                    android:background="@drawable/map_blue"
                    android:layout_weight="0.59" />
                <TextView
                    android:id="@+id/tv_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Map"
                    android:textColor="#0b2092"
                    android:layout_weight="1"/>
            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="1dp"
                android:layout_height="70dp"
                android:orientation="vertical">
                <View
                    android:layout_width="2dp"
                    android:layout_height="70dp"
                    android:background="#000000"/>
            </LinearLayout>-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:gravity="center"
                android:weightSum="4.5"
                android:id="@+id/linear_graph"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_weight="1.5">
                <ImageButton
                    android:id="@+id/img_graph"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/graph_blue"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_graph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Graph"
                    android:textColor="#0b2092"
                    android:layout_weight="1"/>
            </LinearLayout>
            <!-- <LinearLayout
                 android:layout_width="1dp"
                 android:layout_height="70dp"
                 android:orientation="vertical">
                 <View
                     android:layout_width="2dp"
                     android:layout_height="70dp"
                     android:background="#000000"/>
             </LinearLayout>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:weightSum="4.5"
                android:id="@+id/linear_dairy"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_weight="1.2">

                <ImageButton
                    android:id="@+id/img_diary"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/book_blue" />

                <TextView
                    android:id="@+id/tv_diary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dairy"
                    android:textColor="#0b2092"
                    android:layout_weight="1"/>
            </LinearLayout>
            <!-- <LinearLayout
                 android:layout_width="1dp"
                 android:layout_height="70dp"
                 android:orientation="vertical">
                 <View
                     android:layout_width="2dp"
                     android:layout_height="70dp"
                     android:background="#000000"/>
             </LinearLayout>-->
            <LinearLayout
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:weightSum="4.5"
                android:id="@+id/linear_competition"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_weight="0.60">
                <ImageButton
                    android:id="@+id/img_competition"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/share"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_competition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share App"
                    android:textColor="#0b2092"
                    android:layout_weight="1.8"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
